                e.preventDefault();
                const button = e.target.closest('.download-button');
                const imageUrl = button.getAttribute('data-image-url');
                console.log('Download button clicked for URL:', imageUrl);
                if (imageUrl) {
                    await downloadImage(imageUrl);
                }
            }
        });

        // Handle saved prompt
        const textarea = document.querySelector('#character-prompt-textarea');
        const savedPrompt = localStorage.getItem('selectedPrompt');
        
        if (savedPrompt) {
            textarea.value = savedPrompt;
            localStorage.removeItem('selectedPrompt');
        }

        // Add textarea animation
        if (textarea) {
            textarea.addEventListener('focus', function() {
                this.style.minHeight = '8rem';
            });

            textarea.addEventListener('blur', function() {
                if (!this.value.trim()) {
                    this.style.minHeight = '2.5rem';
                }
            });

            // Add Enter key handler for generation
            textarea.addEventListener('keydown', async function(e) {
                // Check if the key pressed is Enter without Shift
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault(); // Prevent newline
                    try {
                        scrollToMainContainer();
                        await handleGenerateImage();
                    } catch (error) {
                        console.error('Error in handleGenerateImage:', error);
                    }
                }
            });
        }
