<script>
    // Test if the script is loaded
    console.log('Script loaded and running');

    // Add download function
    async function downloadImage(imageUrl) {
        try {
            console.log('Starting download for:', imageUrl);
            const response = await fetch(imageUrl);
            const blob = await response.blob();
            const url = window.URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'generated-image.png';
            document.body.appendChild(link);
            link.click();
            window.URL.revokeObjectURL(url);
            document.body.removeChild(link);
            console.log('Download completed');
        } catch (error) {
            console.error('Error downloading image:', error);
        }
    }

    // Add event listeners when the document is ready
    document.addEventListener('DOMContentLoaded', function() {
        console.log('DOM Content Loaded');
        
        function scrollToMainContainer() {
            const mainContainer = document.querySelector('.character-main');
            if (mainContainer) {
                // Add a small delay to ensure the scroll happens after any DOM updates
                setTimeout(() => {
                    window.scrollTo({
                        top: mainContainer.offsetTop + 400, // Offset to match text-to-image behavior
                        behavior: 'smooth'
                    });
                }, 100);
            }
        }

        // Add click event listener to generate button using ID
        const generateBtn = document.getElementById('generateButton');
        console.log('Generate button found by ID:', generateBtn);
        
        if (generateBtn) {
            console.log('Adding click event listener to generate button');
            generateBtn.onclick = async function(e) {
                e.preventDefault();
                console.log('Generate button clicked!');
                try {
                    scrollToMainContainer();
                    await handleGenerateImage();
                    console.log('Generate button completed!');
                } catch (error) {
                    console.error('Error in handleGenerateImage:', error);
                }
