    // Function to save image to history
    async function saveImageToHistory(imageUrl, prompt) {
        const currentCategoryId = document.querySelector('.category-text').getAttribute('data-current-category-id');
        const categories = await fetchCategories()
        const category = categories.find(cat => cat._id === currentCategoryId);
        let history = JSON.parse(localStorage.getItem('generatedImages') || '[]');
        const newImage = {
            url: imageUrl,
            category: category,
            prompt: prompt,
            timestamp: new Date().toISOString()
        };
        history.unshift(newImage); // Add new image to the start
        
        localStorage.setItem('generatedImages', JSON.stringify(history));
        updateHistoryDisplay();
    }

    // Function to update history display
    function updateHistoryDisplay() {
        const history = JSON.parse(localStorage.getItem('generatedImages') || '[]');
        const thumbnailsContainer = document.querySelector('.character-thumbnails');
        
