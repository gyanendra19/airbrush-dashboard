{{!-- Frog Section Styles --}}
<style>
    .frog-section {
        position: relative;
        width: 100%;
        height: 100vh;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .frog-video-container {
        position: absolute;
        top: 10%;
        width: 75%;
        height: 70%;
        z-index: 1;
    }

    .video-overlay {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        border-radius: 15px;
        background-color: rgba(0, 0, 0, 0.4);
        z-index: 200;
    }

    .frog-video-container video {
        width: 100%;
        height: 100%;
        border-radius: 15px;
        object-fit: cover;
        filter: brightness(0.7);
    }

    .frog-content-overlay {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        gap: 16px;
        justify-content: center;
    }

    .frog-content {
        padding: 3rem;
        text-align: center;
        width: 100%;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        max-width: 700px;
    }

    .frog-title {
        font-size: 4rem;
        font-weight: bold;
        color: white;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .frog-subtitle {
        font-size: 2.5rem;
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 2rem;
    }

    .frog-start-button {
        background: #6b46c1;
        color: white;
        padding: 1.5rem 6rem;
        margin: auto;
        width: fit-content;
        border-radius: 8px;
        font-size: 1.7rem;
        font-weight: bold;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .frog-start-button:hover {
        background: #553c9a;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(107, 70, 193, 0.3);
    }

    @media (max-width: 768px) {
        .frog-title {
            font-size: 2.5rem;
        }

        .frog-video-container{
            position: absolute !important;
            top: 25% !important;
            width: 92% !important;
            height: 50% !important;
        }

        .frog-title{
            font-size: 2.2rem !important;
        }

        .frog-subtitle{
            font-size: 1.8rem !important;
        }

        .frog-content-overlay {
            padding: 1.5rem;
        }
    }
</style>

{{!-- Frog Section Content --}}
<section class="frog-section">
    <div class="frog-video-container">
        <div class="video-overlay"></div>
        <video autoplay loop muted playsinline>
            <source src="/videos/frog.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>

    </div>
    <div class="frog-content-overlay">
        <div class="frog-content">
            <h1 class="frog-title">Who Said 3D Had to Be Hard?</h1>
            <p class="frog-subtitle">So easy, even your grandma could generate a masterpiece</p>
        </div>
        <button class="frog-start-button">Start</button>
    </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const startButton = document.querySelector('.frog-start-button');
    
    if (startButton) {
        startButton.addEventListener('click', function() {
            // Store a default prompt
            const defaultPrompt = "Create a stunning and creative image that captures the essence of modern design, incorporating vibrant colors and dynamic elements. The composition should be balanced and visually engaging, with attention to detail and artistic flair.";
            localStorage.setItem('selectedPrompt', defaultPrompt);
            
            // Find and scroll to the text-to-image section
            const textToImageSection = document.getElementById('text-to-image');
            if (textToImageSection) {
                textToImageSection.scrollIntoView({ behavior: 'smooth' });
                
                // Set the textarea value if it exists
                const textarea = textToImageSection.querySelector('.prompt-input textarea');
                if (textarea) {
                    textarea.value = defaultPrompt;
                }
            }
        });
    }
});
</script>