    .img-grid-container {
        width: 100%;
        max-width: 1300px;
        margin: 0 auto;
        padding: 20px;
    }

    .img-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 25px;
        margin-bottom: 25px;
        justify-content: center;
        align-items: center;
    }

    .img-container {
        aspect-ratio: 9/10;
        overflow: hidden;
        border-radius: 15px;
        width: 100%;
        height: 100%;
        position: relative;
    }

    .img-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        margin: 0;
        padding: 0;
        transition: transform 0.3s ease;
    }

    @media (max-width: 768px) {
        .img-grid {
            display: flex;
            gap: 10px;
        }

        .img-grid-box{
            height: 100% !important;
            margin-left: 0px !important;
        }

        .slide-from-right{
            transform: translateY(0px) !important;
        }

        .slide-from-left{
            transform: translateY(0px) !important;
        }

        .img-container{
            height: 120px !important;
            width: 100% !important;
        }

        .img-grid-container{
            padding: 0px !important;
        }
    }

    @media (max-width: 480px) {
        .img-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Animation styles */
    .slide-from-left {
        opacity: 0;
        transform: translateX(-100px);
        transition: all 1s ease;
    }

    .slide-from-right {
        opacity: 0;
        transform: translateX(100px);
        transition: all 1s ease;
    }

    .slide-from-top {
        opacity: 0;
        transform: translateY(-100px);
        transition: all 1s ease;
    }

    .slide-from-bottom {
        opacity: 0;
        transform: translateY(100px);
        transition: all 1s ease;
    }

    .slide-from-left.animate,
    .slide-from-right.animate,
    .slide-from-top.animate,
    .slide-from-bottom.animate {
        opacity: 1;
        transform: translate(0);
    }

    /* Add transition delay classes */
    .delay-1 { transition-delay: 0.2s; }
    .delay-2 { transition-delay: 0.4s; }
    .delay-3 { transition-delay: 0.6s; }
</style>

