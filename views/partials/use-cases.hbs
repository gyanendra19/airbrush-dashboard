    .img-grid-container {
        width: 100%;
        max-width: 1300px;
        margin: 0 auto;
        padding: 20px;
    }

    .img-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 25px;
        margin-bottom: 25px;
        justify-content: center;
        align-items: center;
    }

    .img-container {
        aspect-ratio: 9/10;
        overflow: hidden;
        border-radius: 15px;
        width: 100%;
        height: 100%;
        position: relative;
    }

    .img-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        margin: 0;
        padding: 0;
        transition: transform 0.3s ease;
    }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        border-radius: 15px;
        z-index: 2;
    }

    .img-container:hover .image-overlay {
        opacity: 1;
    }

    .use-prompt-btn {
        background: none;
        border: none;
        color: white;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
        padding: 0;
        font-size: 14px;
        font-weight: 500;
    }

    .icon-circle {
        width: 40px;
        height: 40px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s ease;
    }

    .use-prompt-btn:hover .icon-circle {
        transform: scale(1.1);
    }

    @media (max-width: 768px) {
        .img-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 480px) {
        .img-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Animation styles */
    .slide-from-left {
        opacity: 0;
        transform: translateX(-100px);
        transition: all 1s ease;
    }

    .slide-from-right {
        opacity: 0;
        transform: translateX(100px);
        transition: all 1s ease;
    }

    .slide-from-top {
        opacity: 0;
        transform: translateY(-100px);
        transition: all 1s ease;
    }

    .slide-from-bottom {
        opacity: 0;
        transform: translateY(100px);
        transition: all 1s ease;
    }

    .slide-from-left.animate,
    .slide-from-right.animate,
    .slide-from-top.animate,
    .slide-from-bottom.animate {
        opacity: 1;
        transform: translate(0);
    }

    /* Add transition delay classes */
