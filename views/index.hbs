    <script>
        // Initialize GSAP animations
        gsap.registerPlugin(ScrollTrigger);

        // Animate left section
        gsap.to(".animate-from-left", {
            opacity: 1,
            x: 0,
            duration: 1.3,
            ease: "power2.out"
        });

        // Animate right section with slight delay
        gsap.to(".animate-from-right", {
            opacity: 1,
            x: 0,
            duration: 1.3,
            delay: 0.2,
            ease: "power2.out"
        });

        // Create floating circles
        function createFloatingCircles() {
            const container = document.getElementById('floatingCircles');
            const numCircles = 15;

            for (let i = 0; i < numCircles; i++) {
                const circle = document.createElement('div');
                circle.className = 'circle';
                
                // Random size between 10 and 30 pixels
                const size = Math.random() * 20 + 10;
                circle.style.width = `${size}px`;
                circle.style.height = `${size}px`;
                
                // Random horizontal position
                const left = Math.random() * 100;
                circle.style.left = `${left}%`;
                
                // Random animation duration between 20 and 40 seconds
                const duration = Math.random() * 20 + 20;
                circle.style.animationDuration = `${duration}s`;
                
                // Random delay
                const delay = Math.random() * 10;
                circle.style.animationDelay = `-${delay}s`;
                
                container.appendChild(circle);
            }
        }

        // Call the function when the document is loaded
        document.addEventListener('DOMContentLoaded', () => {
            createFloatingCircles();
            
            // Show floating alert after a delay
            setTimeout(() => {
                const signupAlert = document.getElementById('signupAlert');
                signupAlert.classList.add('show');
                
                // Hide alert after 5 seconds
                setTimeout(() => {
                    signupAlert.classList.remove('show');
                }, 7000);
            }, 7000); // Show after 2 second delay
        });
    </script>

